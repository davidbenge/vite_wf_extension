{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/js",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.html"
  ],
  "exclude": ["node_modules", "dist"]
} 