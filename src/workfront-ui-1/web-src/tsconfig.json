{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/js",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.html"
  ],
  "exclude": ["node_modules", "dist"]
} 