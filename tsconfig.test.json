{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
} 